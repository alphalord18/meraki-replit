{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api": {
      "runtime": "nodejs18.x",
      "includeFiles": "dist/functions/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
